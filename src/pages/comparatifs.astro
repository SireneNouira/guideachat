---
import Layout from "../layouts/Layout.astro";
import AffiliateButton from "../components/AffiliateButton.astro";
import Icon from "../components/Icon.astro";

const base = import.meta.env.BASE_URL;

const lastUpdate = "21 janvier 2026";

const categories = [];

const comparatifs = [];
---

<Layout
  title="Tous nos comparatifs 2026"
  description="Découvrez nos comparatifs détaillés pour choisir le meilleur produit. Analyses approfondies et recommandations objectives."
  canonicalUrl={base + "comparatifs"}
>
  <article class="page-shell">

    <section class="featured-section">
      <div class="section-header">
        <div>
          <p class="section-kicker">Contenu à venir</p>
          <h2 class="section-title">
            <Icon name="chart-bar" class="icon-accent" /> Comparatifs en cours de création
          </h2>
          <p class="section-subtitle">Les comparatifs arriveront bientôt, dès que suffisamment d'articles seront disponibles pour proposer des comparaisons pertinentes.</p>
        </div>
      </div>

      <div style="text-align: center; padding: 4rem 2rem; background: var(--color-surface); border-radius: 12px; margin-top: 2rem;">
        <Icon name="clock" class="icon-accent" size={48} />
        <p style="margin-top: 1rem; font-size: 1.125rem; color: var(--color-text-secondary);">Nos équipes préparent des comparatifs détaillés qui seront publiés après la mise en ligne des premiers tests produits.</p>
      </div>
    </section>

    <section class="categories-section">
      <div class="categories-shell">
        <div class="section-header">
          <div>
            <p class="section-kicker">Catégories</p>
            <h2 class="section-title"><Icon name="folders" class="icon-accent" /> Parcourir par thème</h2>
            <p class="section-subtitle">Les catégories de comparatifs seront disponibles dès la publication des premiers contenus.</p>
          </div>
        </div>
      </div>
    </section>

    <section id="liste-comparatifs" class="page-section">
      <div class="section-header">
        <div>
          <p class="section-kicker">Tous les comparatifs</p>
          <h2 class="section-title"><Icon name="list" class="icon-accent" /> Liste complète</h2>
          <p class="section-subtitle">Cette section affichera tous nos comparatifs une fois les tests produits publiés.</p>
        </div>
      </div>
    </section>
  </article>
</Layout>
