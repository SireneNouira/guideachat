---
import "../styles/global.css";
import Analytics from "../components/Analytics.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalUrl?: string;
  keywords?: string;
  author?: string;
  publishDate?: string;
  modifiedDate?: string;
  articleSection?: string;
  jsonLd?: object;
}

const { 
  title, 
  description, 
  image, 
  canonicalUrl,
  keywords = "aspirateur balai, test produit, guide achat, comparatif produits",
  author = "Blog Affiliation",
  publishDate,
  modifiedDate,
  articleSection = "Tests & Guides",
  jsonLd
} = Astro.props;

const siteTitle = 'Guide Achat - Tests & Comparatifs Produits 2026';
const fullTitle = `${title} | ${siteTitle}`;

const base = import.meta.env.BASE_URL;
const siteUrl = Astro.site?.href ?? 'https://sirenenouira.github.io/guideachat/';

const defaultImage = `${base}images/og-default.jpg`;

const stripLeadingSlash = (value: string) =>
  value.startsWith('/') ? value.slice(1) : value;

const ogImagePath = image || defaultImage;
const ogImage = new URL(stripLeadingSlash(ogImagePath), siteUrl).toString();

const canonicalTarget = canonicalUrl
  ? stripLeadingSlash(canonicalUrl)
  : stripLeadingSlash(base);

const canonicalHref = new URL(canonicalTarget, siteUrl).toString();
const faviconHref = `${base}favicon.svg`;

// Schema.org WebSite pour le site global
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": siteTitle,
  "url": siteUrl,
  "description": "Guide d'achat et tests de produits avec avis détaillés et comparatifs",
  "publisher": {
    "@type": "Organization",
    "name": "Guide Achat",
    "logo": {
      "@type": "ImageObject",
      "url": `${siteUrl}${stripLeadingSlash(defaultImage)}`
    }
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": `${siteUrl}search?q={search_term_string}`,
    "query-input": "required name=search_term_string"
  }
};

// Schema.org Organization
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Guide Achat",
  "url": siteUrl,
  "logo": `${siteUrl}${stripLeadingSlash(defaultImage)}`,
  "sameAs": [
    "https://www.facebook.com/votresite",
    "https://twitter.com/votresite",
    "https://www.instagram.com/votresite"
  ]
};
---


<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- SEO Meta Tags -->
  <title>{fullTitle}</title>
  <meta name="description" content={description}>
  <meta name="keywords" content={keywords}>
  <meta name="author" content={author}>
  {publishDate && <meta property="article:published_time" content={publishDate}>}
  {modifiedDate && <meta property="article:modified_time" content={modifiedDate}>}
  {articleSection && <meta property="article:section" content={articleSection}>}
  <link rel="canonical" href={canonicalHref}>
  
  <!-- Robots Meta -->
  <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
  <meta name="googlebot" content="index, follow">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="article">
  <meta property="og:url" content={canonicalHref}>
  <meta property="og:site_name" content={siteTitle}>
  <meta property="og:locale" content="fr_FR">
  <meta property="og:title" content={fullTitle}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImage}>
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content={title}>
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@votrecompte">
  <meta name="twitter:creator" content="@votrecompte">
  <meta name="twitter:title" content={fullTitle}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImage}>
  <meta name="twitter:image:alt" content={title}>
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href={faviconHref}>
  
  <!-- Core Web Vitals Optimization -->
  <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="dns-prefetch" href="https://www.google-analytics.com">
  <link rel="dns-prefetch" href="https://www.googletagmanager.com">
  <link rel="dns-prefetch" href="https://amazon.fr">
  
  <!-- Preload Critical CSS -->
  <link rel="preload" href={`${base}styles/global.css`} as="style">
  
  <!-- Resource Hints -->
  <link rel="prefetch" href={`${base}articles`}>
  
  <!-- JSON-LD Schema.org -->
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  {jsonLd && <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />}
  
  <!-- Google Analytics -->
  <Analytics measurementId="G-XXXXXXXXXX" />
  
  <script type="module" src="https://code.iconify.design/iconify-icon/1.0.8/iconify-icon.min.js"></script>
</head>
<body>
  <header class="site-header">
    <nav class="container">
      <div class="nav-wrapper">
        <a href={base} class="logo">
          <span class="logo-text">Blog Affiliation</span>
        </a>
        <ul class="nav-menu">
          <li><a href={base}>Accueil</a></li>
          <li><a href={base + "articles"}>Articles</a></li>
          <li><a href={base + "comparatifs"}>Comparatifs</a></li>
          <li><a href={base + "categories"}>Categories</a></li>
          <li><a href={base + "divulgation-affiliation"}>Affiliation</a></li>
          <li><a href={base + "contact"}>Contact</a></li>
        </ul>
        <button class="mobile-menu-toggle" aria-label="Menu">
          Menu
        </button>
      </div>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer class="site-footer">
    <div class="container">
      <div class="footer-grid">
        <div class="footer-col">
          <h3>A propos</h3>
          <p>Nous testons et recommandons les meilleurs produits pour vous aider a faire les bons choix.</p>
        </div>
        <div class="footer-col">
          <h3>Navigation</h3>
          <ul>
            <li><a href={base + "articles"}>Tous les articles</a></li>
            <li><a href={base + "comparatifs"}>Comparatifs</a></li>
            <li><a href={base + "categories"}>Categories</a></li>
            <li><a href={base + "contact"}>Contact</a></li>
          </ul>
        </div>
        <div class="footer-col">
          <h3>Legal</h3>
          <ul>
            <li><a href={base + "mentions-legales"}>Mentions legales</a></li>
            <li><a href={base + "politique-confidentialite"}>Confidentialite</a></li>
            <li><a href={base + "divulgation-affiliation"}>Divulgation affiliation</a></li>
          </ul>
        </div>
        <div class="footer-col">
          <h3>Newsletter</h3>
          <p>Recevez nos derniers tests et guides directement dans votre boite mail.</p>
          <form class="newsletter-form" action="https://formspree.io/f/xyzyvpqb" method="POST">
            <input type="email" name="email" placeholder="Votre email" aria-label="Email pour la newsletter" required>
            <input type="hidden" name="_subject" value="Nouvelle inscription newsletter">
            <input type="hidden" name="_next" value={`${siteUrl}${stripLeadingSlash(base)}?newsletter=success`}>
            <button type="submit" aria-label="S'abonner">S'abonner</button>
          </form>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} Blog Affiliation. Tous droits reserves.</p>
        <p class="affiliate-disclosure">
          Les liens de cette page peuvent etre des liens d'affiliation. Nous touchons une commission sur les achats effectues via ces liens, sans frais supplementaires pour vous.
        </p>
      </div>
    </div>
  </footer>
</body>
</html>
