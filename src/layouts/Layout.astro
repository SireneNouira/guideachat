---
interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalUrl?: string;
}

const { title, description, image, canonicalUrl } = Astro.props;
const siteTitle = "Blog Affiliation - Les Meilleurs Produits Testés";
const fullTitle = `${title} | ${siteTitle}`;
const defaultImage = "/images/og-default.jpg";
const ogImage = image || defaultImage;
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- SEO Meta Tags -->
  <title>{fullTitle}</title>
  <meta name="description" content={description}>
  {canonicalUrl && <link rel="canonical" href={canonicalUrl}>}
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:title" content={fullTitle}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImage}>
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={fullTitle}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImage}>
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  <!-- Preconnect for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
</head>
<body>
  <header class="site-header">
    <nav class="container">
      <div class="nav-wrapper">
        <a href="/" class="logo">
          <span class="logo-text">Blog Affiliation</span>
        </a>
        <ul class="nav-menu">
          <li><a href="/">Accueil</a></li>
          <li><a href="/articles">Articles</a></li>
          <li><a href="/comparatifs">Comparatifs</a></li>
          <li><a href="/categories">Catégories</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
        <button class="mobile-menu-toggle" aria-label="Menu">
          ☰
        </button>
      </div>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer class="site-footer">
    <div class="container">
      <div class="footer-grid">
        <div class="footer-col">
          <h3>À propos</h3>
          <p>Nous testons et recommandons les meilleurs produits pour vous aider à faire les bons choix.</p>
        </div>
        <div class="footer-col">
          <h3>Navigation</h3>
          <ul>
            <li><a href="/articles">Tous les articles</a></li>
            <li><a href="/comparatifs">Comparatifs</a></li>
            <li><a href="/categories">Catégories</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </div>
        <div class="footer-col">
          <h3>Légal</h3>
          <ul>
            <li><a href="/mentions-legales">Mentions légales</a></li>
            <li><a href="/politique-confidentialite">Confidentialité</a></li>
            <li><a href="/divulgation-affiliation">Divulgation affiliation</a></li>
          </ul>
        </div>
        <div class="footer-col">
          <h3>Suivez-nous</h3>
          <div class="social-links">
            <a href="#" aria-label="Facebook">Facebook</a>
            <a href="#" aria-label="Twitter">Twitter</a>
            <a href="#" aria-label="Instagram">Instagram</a>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} Blog Affiliation. Tous droits réservés.</p>
        <p class="affiliate-disclosure">
          Les liens de cette page peuvent être des liens d'affiliation. Nous touchons une commission sur les achats effectués via ces liens, sans frais supplémentaires pour vous.
        </p>
      </div>
    </div>
  </footer>
</body>
</html>
