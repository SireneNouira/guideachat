---
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalUrl?: string;
}

const { title, description, image, canonicalUrl } = Astro.props;

const siteTitle = 'Blog Affiliation - Les Meilleurs Produits Testes';
const fullTitle = `${title} | ${siteTitle}`;

const base = import.meta.env.BASE_URL;
const siteUrl = Astro.site?.href ?? 'https://sirenenouira.github.io/Blog-perso/';

const defaultImage = `${base}images/og-default.jpg`;

const stripLeadingSlash = (value: string) =>
  value.startsWith('/') ? value.slice(1) : value;

const ogImagePath = image || defaultImage;
const ogImage = new URL(stripLeadingSlash(ogImagePath), siteUrl).toString();

const canonicalTarget = canonicalUrl
  ? stripLeadingSlash(canonicalUrl)
  : stripLeadingSlash(base);

const canonicalHref = new URL(canonicalTarget, siteUrl).toString();
const faviconHref = `${base}favicon.svg`;
---


<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- SEO Meta Tags -->
  <title>{fullTitle}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonicalHref}>
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:title" content={fullTitle}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImage}>
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={fullTitle}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImage}>
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href={faviconHref}>
  
  <!-- Preconnect for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <script type="module" src="https://code.iconify.design/iconify-icon/1.0.8/iconify-icon.min.js"></script>
</head>
<body>
  <header class="site-header">
    <nav class="container">
      <div class="nav-wrapper">
        <a href={base} class="logo">
          <span class="logo-text">Blog Affiliation</span>
        </a>
        <ul class="nav-menu">
          <li><a href={base}>Accueil</a></li>
          <li><a href={base + "articles"}>Articles</a></li>
          <li><a href={base + "comparatifs"}>Comparatifs</a></li>
          <li><a href={base + "divulgation-affiliation"}>Affiliation</a></li>
          <li><a href="mailto:contact@example.com">Contact</a></li>
        </ul>
        <button class="mobile-menu-toggle" aria-label="Menu">
          Menu
        </button>
      </div>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer class="site-footer">
    <div class="container">
      <div class="footer-grid">
        <div class="footer-col">
          <h3>A propos</h3>
          <p>Nous testons et recommandons les meilleurs produits pour vous aider a faire les bons choix.</p>
        </div>
        <div class="footer-col">
          <h3>Navigation</h3>
          <ul>
            <li><a href={base + "articles"}>Tous les articles</a></li>
            <li><a href={base + "comparatif-exemple"}>Comparatifs</a></li>
            <li><a href={base + "categories"}>Categories</a></li>
            <li><a href="mailto:contact@example.com">Contact</a></li>
          </ul>
        </div>
        <div class="footer-col">
          <h3>Legal</h3>
          <ul>
            <li><a href={base + "mentions-legales"}>Mentions legales</a></li>
            <li><a href={base + "politique-confidentialite"}>Confidentialite</a></li>
            <li><a href={base + "divulgation-affiliation"}>Divulgation affiliation</a></li>
          </ul>
        </div>
        <div class="footer-col">
          <h3>Suivez-nous</h3>
          <div class="social-links">
            <a href="#" aria-label="Facebook">Facebook</a>
            <a href="#" aria-label="Twitter">Twitter</a>
            <a href="#" aria-label="Instagram">Instagram</a>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} Blog Affiliation. Tous droits reserves.</p>
        <p class="affiliate-disclosure">
          Les liens de cette page peuvent etre des liens d'affiliation. Nous touchons une commission sur les achats effectues via ces liens, sans frais supplementaires pour vous.
        </p>
      </div>
    </div>
  </footer>
</body>
</html>
