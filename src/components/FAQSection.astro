---
export interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items: FAQItem[];
  title?: string;
}

const { items, title = "Questions FrÃ©quentes" } = Astro.props;

// Schema.org FAQPage
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": items.map(item => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
};
---

<section class="faq-section">
  <h2 class="faq-title">{title}</h2>
  <div class="faq-container">
    {items.map((item, index) => (
      <details class="faq-item" id={`faq-${index}`}>
        <summary class="faq-question">
          <span class="question-text">{item.question}</span>
          <span class="faq-icon" aria-hidden="true">+</span>
        </summary>
        <div class="faq-answer">
          <p set:html={item.answer} />
        </div>
      </details>
    ))}
  </div>
</section>

<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

<style>
  .faq-section {
    margin: 3rem 0;
    padding: 2rem;
    background: #f9fafb;
    border-radius: 12px;
  }

  .faq-title {
    font-size: 1.75rem;
    margin-bottom: 2rem;
    color: #1f2937;
    text-align: center;
  }

  .faq-container {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 1.25rem;
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .faq-item[open] {
    border-color: #3b82f6;
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 600;
    font-size: 1.1rem;
    color: #1f2937;
    cursor: pointer;
    list-style: none;
    user-select: none;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .question-text {
    flex: 1;
    padding-right: 1rem;
  }

  .faq-icon {
    font-size: 1.5rem;
    color: #3b82f6;
    font-weight: 300;
    transition: transform 0.3s ease;
  }

  .faq-item[open] .faq-icon {
    transform: rotate(45deg);
  }

  .faq-answer {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #e5e7eb;
    color: #4b5563;
    line-height: 1.7;
  }

  .faq-answer :global(p) {
    margin: 0;
  }

  .faq-answer :global(strong) {
    color: #1f2937;
  }

  @media (max-width: 768px) {
    .faq-section {
      padding: 1.5rem;
    }

    .faq-title {
      font-size: 1.5rem;
    }

    .faq-question {
      font-size: 1rem;
    }

    .faq-item {
      padding: 1rem;
    }
  }
</style>
